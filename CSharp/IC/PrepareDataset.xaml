<Page x:Class="Lithicsoft_Trainer_Studio.CSharp.IC.PrepareDataset"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lithicsoft_Trainer_Studio.CSharp.IC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="655"
      Title="PrepareDataset">

    <Grid>
        <Label Content="Choose your dataset zip file:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#FF0078D7"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="530" Height="30" Foreground="#FF5D6B99" BorderBrush="#FF5D6B99" TextChanged="TextBox1_TextChanged" Background="#FFF4F4F4" SelectionBrush="#FF5D6B99"/>
        <Button x:Name="button1" Content="Choose file" HorizontalAlignment="Left" Margin="545,41,0,0" VerticalAlignment="Top" Width="100" Height="30" Background="#FF5D6B99" Foreground="White" BorderBrush="White" Click="Button_Click"/>

    </Grid>
</Page>
