<Page x:Class="Lithicsoft_Trainer_Studio.CSharp.IC.ModelResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lithicsoft_Trainer_Studio.CSharp.IC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="665"
      Title="ModelResult" Loaded="Page_Loaded"
      xmlns:ui="http://schemas.modernwpf.com/2019">
    
    <Grid>
        <!-- Open output folder button -->
        <Button x:Name="button1" Content="Open output folder" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="140" Height="30" Margin="515,8,0,0" IsEnabled="False"
                HorizontalContentAlignment="Center" Click="Button1_Click"/>

        <!-- RichTextBox for displaying code/document -->
        <RichTextBox x:Name="DocCode" Margin="10, 41, 10, 10" MaxHeight="450" MaxWidth="655" IsDocumentEnabled="True">
            <FlowDocument>
                <Paragraph>
                    <!-- Content goes here -->
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <!-- How to use label -->
        <Label Content="How to use your model?" HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="10,10,0,0" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Page>
