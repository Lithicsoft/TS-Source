<Page x:Class="Lithicsoft_Trainer_Studio.Python.PY.TestModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lithicsoft_Trainer_Studio.Python.PY"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="655"
      Title="TestModel" Loaded="Page_Loaded"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <Grid>
        <!-- Button for run test -->
        <Button x:Name="button1" Content="Run test" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="Button_Click" IsEnabled="False"/>

        <!-- Loading bar -->
        <ProgressBar x:Name="progressBar" IsIndeterminate="True" Visibility="Hidden"
             Height="20" Margin="10,45,545,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
