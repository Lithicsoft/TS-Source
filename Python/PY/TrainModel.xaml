<Page x:Class="Lithicsoft_Trainer_Studio.Python.PY.TrainModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lithicsoft_Trainer_Studio.Python.PY"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="655"
      Title="TrainModel"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <Grid Loaded="Grid_Loaded">
        <!-- Information Label -->
        <Label x:Name="label1" Content="Information" HorizontalAlignment="Left" 
               VerticalAlignment="Top" Margin="10,10,0,0"
               FontSize="16" FontWeight="Bold"/>

        <!-- Train Button -->
        <Button x:Name="button1" Content="Train" HorizontalAlignment="Left" 
                VerticalAlignment="Top" Width="72" Height="30" 
                Margin="10,50,0,0" IsEnabled="False" Click="Button1_Click"/>
    </Grid>
</Page>
