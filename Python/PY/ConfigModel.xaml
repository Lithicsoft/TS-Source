<Page x:Class="Lithicsoft_Trainer_Studio.Python.PY.ConfigModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lithicsoft_Trainer_Studio.Python.PY"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="655"
      Title="ConfigModel" Loaded="Page_Loaded">

    <Grid>
        <ListView Name="listView1" IsSynchronizedWithCurrentItem="True" Margin="10,0,10,50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Variable" Width="120" DisplayMemberBinding="{Binding Variable}" />
                    <GridViewColumn Header="Value" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Save change" Margin="10,0,10,10" BorderBrush="White" Foreground="White" Background="#FF5D6B99" Click="Button_Click" Height="35" VerticalAlignment="Bottom"/>

    </Grid>
</Page>
