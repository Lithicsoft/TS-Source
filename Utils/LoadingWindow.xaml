<Window x:Class="Lithicsoft_Trainer_Studio.Utils.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Working..." Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="JobName" Text="..." FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#FF0078D7"/>
        <ProgressBar IsIndeterminate="True" Width="200" Height="20" Foreground="#FF5D6B99"/>
    </StackPanel>
</Window>
